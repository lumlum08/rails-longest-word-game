<%# A page to display the game settings (random letters),
with a form for the user to type a word.
A button to submit this form. %>

<h1>New Game</h1>

<p>Here is your grid: </p>

<div class="boxes">
<% @newgames.each do |newgame| %>
<h3 class="blue-square">
<%= newgame %>
</h3>
<% end %>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'newgames', @newgames%>
  <input type="text" name="words">
  <input type="submit" value="Post!" class="">
</form>
